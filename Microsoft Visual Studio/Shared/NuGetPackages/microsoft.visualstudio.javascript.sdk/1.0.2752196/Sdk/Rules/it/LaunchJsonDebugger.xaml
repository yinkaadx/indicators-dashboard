<?xml version="1.0" encoding="utf-8"?>
<Rule Name="LaunchJsonDebugger" DisplayName="launch.json" PageTemplate="Debugger" Description="Opzioni del debugger launch.json" xmlns:sys="clr-namespace:System;assembly=mscorlib" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns="http://schemas.microsoft.com/build/2009/properties">

    <Rule.Metadata>
        <sys:String x:Key="DebugTargetDropdownEnum">LaunchJsonTarget</sys:String>
    </Rule.Metadata>
    
    <Rule.DataSource>
        <DataSource Persistence="ProjectFile"/>
    </Rule.DataSource>

    <DynamicEnumProperty Name="LaunchJsonTarget" EnumProvider="LaunchJsonDebugTargetProvider" Visible="False">
        <DynamicEnumProperty.DataSource>
            <DataSource Persistence="UserFile"/>
        </DynamicEnumProperty.DataSource>
    </DynamicEnumProperty>

    <StringProperty Name="LaunchJsonFolder" DisplayName="launch.json Folder" Description="Posizione in cui individuare il file launch.json per la configurazione di debug. I percorsi relativi saranno relativi alla radice del progetto. Per impostazione predefinita, la cartella vscode." Subtype="folder">
        <StringProperty.DataSource>
            <DataSource Persistence="ProjectFile"/>
        </StringProperty.DataSource>
    </StringProperty>
</Rule>
