<?xml version="1.0" encoding="utf-8"?>
<Rule Name="LaunchJsonDebugger" DisplayName="launch.json" PageTemplate="Debugger" Description="launch.json 调试程序选项" xmlns:sys="clr-namespace:System;assembly=mscorlib" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns="http://schemas.microsoft.com/build/2009/properties">

    <Rule.Metadata>
        <sys:String x:Key="DebugTargetDropdownEnum">LaunchJsonTarget</sys:String>
    </Rule.Metadata>
    
    <Rule.DataSource>
        <DataSource Persistence="ProjectFile"/>
    </Rule.DataSource>

    <DynamicEnumProperty Name="LaunchJsonTarget" EnumProvider="LaunchJsonDebugTargetProvider" Visible="False">
        <DynamicEnumProperty.DataSource>
            <DataSource Persistence="UserFile"/>
        </DynamicEnumProperty.DataSource>
    </DynamicEnumProperty>

    <StringProperty Name="LaunchJsonFolder" DisplayName="launch.json 文件夹" Description="用于调试配置的 launch.json 文件的位置。相对路径将相对于项目根路径。默认情况下，为 .vscode 文件夹。" Subtype="folder">
        <StringProperty.DataSource>
            <DataSource Persistence="ProjectFile"/>
        </StringProperty.DataSource>
    </StringProperty>
</Rule>
